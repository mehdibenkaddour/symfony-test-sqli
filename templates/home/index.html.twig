{% extends 'base.html.twig' %}
{% block body %}
<div class="section pt-5 pb-0">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Trending</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="posts-slide-wrap">
                    <div class="posts-slide" id="posts-slide">
                        {% for article in trending_articles %}
                        <div class="item">
                            <div class="post-entry d-lg-flex">
                                <div class="me-lg-5 thumbnail mb-4 mb-lg-0">
                                    <a href="single.html">
                                        <img src="{{article.cover}}" alt="Image" class="img-fluid">
                                    </a>
                                </div>
                                <div class="content align-self-center">
                                    <div class="post-meta mb-3">
                                        <a href="#" class="category">{{article.categorie.title}}</a>
                                        <span class="date">{{article.dateDeCreation|date("F d, Y")}}</span>
                                    </div>
                                    <h2 class="heading"><a href="single.html">{{article.titre}}</a></h2>
                                    <p>{{article.introduction}}</p>
                                    <a href="#" class="post-author d-flex align-items-center">
                                        <div class="author-pic">
                                            <img src="https://i.pravatar.cc/45" alt="Image">
                                        </div>
                                        <div class="text">
                                            <strong>Sergy Campbell</strong>
                                            <span>CEO and Founder</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row g-5">
        {%for article in recent_articles %}
            <div class="col-lg-4">
                <div class="post-entry d-block small-post-entry-v">
                    <div class="thumbnail">
                        <a href="single.html">
                            <img src="{{article.cover}}" alt="Image" class="img-fluid">
                        </a>
                    </div>
                    <div class="content">
                        <div class="post-meta mb-1">
                            <a href="#" class="category">{{article.categorie.title}}</a> &mdash;
                            <span class="date">{{article.dateDeCreation|date("F d, Y")}}</span>
                        </div>
                        <h2 class="heading mb-3">
                            <a href="single.html">{{article.titre}}</a>
                        </h2>
                        <p>{{article.introduction}}</p>
                        <a href="#" class="post-author d-flex align-items-center">
                            <div class="author-pic">
                                <img src="https://i.pravatar.cc/45" alt="Image">
                            </div>
                            <div class="text">
                                <strong>Sergy Campbell</strong>
                                <span>CEO and Founder</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Most Popular Posts</h2>
            </div>
        </div>
    </div>
    <div class="most-popular-slider-wrap px-3 px-md-0">
        <div id="most-popular-nav">
            <span class="prev" data-controls="prev">Prev</span>
            <span class="next" data-controls="next">Next</span>
        </div>
        <div class="most-popular-slider" id="most-popular-center">
        {%for article in popular_articles %}
            <div class="item">
                <div class="post-entry d-block small-post-entry-v">
                    <div class="thumbnail">
                        <a href="single.html">
                            <img src="{{article.cover}}" alt="Image" class="img-fluid">
                        </a>
                    </div>
                    <div class="content">
                        <div class="post-meta mb-1">
                            <a href="#" class="category">{{article.categorie.title}}</a> &mdash;
                            <span class="date">{{article.dateDeCreation|date("F d, Y")}}</span>
                        </div>
                        <h2 class="heading mb-3">
                            <a href="single.html">{{article.titre}}</a>
                        </h2>
                        <p>{{article.introduction}}</p>
                        <a href="#" class="post-author d-flex align-items-center">
                            <div class="author-pic">
                                <img src="https://i.pravatar.cc/45" alt="Image">
                            </div>
                            <div class="text">
                                <strong>Sergy Campbell</strong>
                                <span>CEO and Founder</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="h4 fw-bold">Sports</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                {% for article in sport_articles %}
                    <div class="col-lg-12">
                        <div class="post-entry d-md-flex xsmall-horizontal mb-5">
                            <div class="me-md-3 thumbnail mb-3 mb-md-0">
                                <img src="{{article.cover}}" alt="Image" class="img-fluid">
                            </div>
                            <div class="content">
                                <div class="post-meta mb-1">
                                    <a href="#" class="category">{{article.categorie.title}}</a>
                                    &mdash;
                                    <span class="date">{{article.dateDeCreation|date("F d, Y")}}</span>
                                </div>
                                <h2 class="heading"><a href="single.html">{{article.titre}}</a></h2>
                                <a href="#" class="post-author d-flex align-items-center">
                                    <div class="author-pic">
                                        <img src="https://i.pravatar.cc/45" alt="Image">
                                    </div>
                                    <div class="text">
                                        <strong>Sergy Campbell</strong>
                                        <span>Author, 26 published post</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="h4 fw-bold">Business</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                {% for article in business_articles %}
                    <div class="col-lg-12">
                        <div class="post-entry d-md-flex xsmall-horizontal mb-5">
                            <div class="me-md-3 thumbnail mb-3 mb-md-0">
                                <img src="{{article.cover}}" alt="Image" class="img-fluid">
                            </div>
                            <div class="content">
                                <div class="post-meta mb-1">
                                    <a href="#" class="category">{{article.categorie.title}}</a>,
                                    &mdash;
                                    <span class="date">{{article.dateDeCreation|date("F d, Y")}}</span>
                                </div>
                                <h2 class="heading"><a href="single.html">{{article.titre}}</a></h2>
                                <a href="#" class="post-author d-flex align-items-center">
                                    <div class="author-pic">
                                        <img src="https://i.pravatar.cc/45" alt="Image">
                                    </div>
                                    <div class="text">
                                        <strong>Sergy Campbell</strong>
                                        <span>Author, 26 published post</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
